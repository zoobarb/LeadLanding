---
import { Image } from "astro:assets";
import hero from "../assets/hero.jpg";
import { Icon } from "astro-icon/components";
---

<style>
  .bg-dots {
    background-image: url(https://assets-global.website-files.com/5b5a66e9f3166b36708705fa/5dea7a12bb83ab1f13040de5_cx-dots.svg);
    background-repeat: no-repeat;
  }
</style>

<div class="m-auto max-w-6xl p-12 prose prose-neutral lg:prose-xl">
  <div class="flex flex-col md:flex-row">
    <div class="md:w-1/2 max-w-md flex flex-col justify-center">
      <h1>Fresh Final Expense Leads Daily!</h1>
      <h2>Final Expense Leads for your State</h2>
      <div class="my-5 h-16">
        <div
          class="shadow-md font-medium py-2 px-4 text-violet-100
                 cursor-pointer bg-purple-900 hover:bg-purple-800 rounded text-lg text-center w-48"
        >
          Join us now
        </div>
      </div>
    </div>
    <div class="flex md:justify-end w-full md:w-1/2 -mt-5">
      <div class="bg-dots">
        <div class="shadow-2xl max-w-md z-10 mt-6 ml-4">
          <Image alt="card img" src={hero} />
          <div class="text-2xl p-10 bg-white">
            <Icon name="quote" class="float-left mr-1" /> Leads generated daily,
            People are expecting you to call today.
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
